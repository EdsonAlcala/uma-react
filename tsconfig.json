{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "lib": [
            "es2016",
            "dom"
        ],
        "target": "ES2017",
        "jsx": "react",
        "sourceMap": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}